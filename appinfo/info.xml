<?xml version="1.0"?>
<info>
	<id>firebasepushnotifications</id>
	<name>Firebase Notifications</name>
	<namespace>Firebasepushnotifications</namespace>
	<description>
		This application enables Firebase backed mobile notifications, informing users oif changes and updates to their contents.
		More information will be made available as soon as my mind comes up with it.
	</description>

	<licence>AGPLv3</licence>
	<author>Nunzio Iaccarino, Paolo Manili, Filippo Martini</author>
	<shipped>false</shipped>
	<version>0.0.41</version>
	<default_enable/>
	<types>
		<filesystem/>
	</types>
	<documentation>
		<!-- To Be Defined -->
	</documentation>
	<website>https://liveboxcloud.com/firebase-notifications</website>
	<bugs>http://git.liveboxcloud.com/paolo.manili/firebase-push-notifications.git</bugs>
	<repository type="git">http://git.liveboxcloud.com/paolo.manili/firebase-push-notifications.git</repository>

	<dependencies>
		<nextcloud min-version="11" max-version="12"/>
	</dependencies>

	<settings>
		<admin>OCA\Firebasepushnotifications\Settings\AdminSettings</admin>
		<admin-section>OCA\Firebasepushnotifications\Settings\AdminSection</admin-section>
	</settings>

	<background-jobs>
		<job>OCA\Firebasepushnotifications\Sender\FirebaseSender</job>
	</background-jobs>
</info>
